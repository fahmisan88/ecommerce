    </div>
  </div>

  <div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="latest-product">
            <h2 class="section-title">Latest Products</h2>
            <div class="product-carousel">
              <% @items.each do |item| %>
              <div class="single-product">
                <div class="product-f-image">
                  <img src="<%= item.image %>" alt="">
                  <div class="product-hover">
                    <%= link_to "Add To Cart", add_item_path(id: item, quantity: 1), method: :post, class: "add-to-cart-link" %>
                    <%= link_to "View Details", item_path(id: item), class: "view-details-link"  %>
                  </div>
                </div>

                <h2><a href="<%=item_path(item)%>"><%= item.item_name %></a></h2>

                <div class="product-carousel-price">
                  <ins>RM<%= sprintf('%.2f',item.price )%></ins> <del>RM<%= sprintf('%.2f',item.price+=200 )%></del>
                </div>
              </div>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<%= form_for(current_user, url: user_path(current_user),remote: true, html: { id: "users-create-form", multipart: true }) do |f| %>

  <h1 class="text-center">
    Shipping Address
  </h1>

    <div class="form-group">
      <h4> <%= f.label :shipping_address_field, "Address" %> </h4>
      <%= f.text_field :shipping_address, id: "shipping_address_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :shipping_postcode_field, "Postcode" %> </h4>
      <%= f.text_field :shipping_postcode, id: "shipping_postcode_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Confirm Address", class: "btn btn-success btn-lg" %>
    </div>
<% end %>

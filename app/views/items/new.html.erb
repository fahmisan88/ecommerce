<%= form_for(@item, url: items_path, html: { id: "Ads-create-form" }) do |f| %>
<h1 class="text-center">
  Create Ads
</h1>

<div class="form-group">
  <h4 class="text-center"> Post Image of the Item </h4>
  <div id="preview-image">
    <% if @item.image? %>
    <%= image_tag @item.image, class: "img-settings img-responsive center-block" %>
    <% end %>
  </div>
</div>

<div class="form-group">
  <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
</div>

<div class="form-group">
  <h4> <%= f.label :item_name_field, "Title" %> </h4>
  <%= f.text_field :item_name, required: true, id: "item_name_field", class: 'form-control' %>
</div>

<div class="form-group">
  <h4> <%= f.label :text_field, "Description" %> </h4>
  <%= f.text_field :item_description, id: "item_description_field", class: 'form-control' %>
</div>

<div class="form-group text-center">
  <%= f.submit "Create Ads", class: "btn btn-success btn-lg" %>
</div>
<% end %>
